{
  // looks
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#212121"
  },
  // reason
  "[reason]": {
    "editor.formatOnSave": true
  },
  "reason_language_server.dependencies_codelens": false,
  // breadcrumbs
  "breadcrumbs.enabled": true,
  // editor
  "editor.renderLineHighlight": "line",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollBeyondLastLine": false,
  "editor.lineHeight": 26,
  "editor.occurrencesHighlight": false,
  "editor.multiCursorModifier": "alt",
  "editor.overviewRulerBorder": false,
  "editor.overviewRulerLanes": 0,
  "editor.renderIndentGuides": true,
  "editor.folding": false,
  "editor.snippetSuggestions": "top",
  "editor.lightbulb.enabled": false,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "on",
  "editor.cursorStyle": "line",
  // workbench
  "workbench.list.horizontalScrolling": true,
  "workbench.statusBar.feedback.visible": false,
  "workbench.fontAliasing": "antialiased",
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.editor.showIcons": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.colorTheme": "Monokai Night",
  // window
  "window.zoomLevel": 1,
  "window.restoreWindows": "all",
  "window.newWindowDimensions": "maximized",
  // debug
  "debug.openDebug": "neverOpen",
  "debug.showInStatusBar": "never",
  "debug.toolBarLocation": "hidden",
  // fonts
  "editor.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  // search
  "search.smartCase": true,
  "search.exclude": {
    "dist": true,
    "out": true,
    "coverage": true
  },
  // terminal
  "terminal.integrated.copyOnSelection": true,
  // files
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "vendor": true,
    "package-lock.json": true,
    "**/node_modules": true,
    "**/npm-debug.log": true,
    "**/dist": true,
    "**/*.bs.js": true
  },
  // explorer
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  // python
  "python.linting.pylintArgs": ["--errors-only"],
  // code runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "python": "python3"
  },
  // prettier
  "editor.formatOnSave": true,
  // code runner
  "code-runner.runInTerminal": false,
  // vim
  "vim.leader": " ",
  "vim.debug.silent": true,
  "vim.cursorStylePerMode.normal": "underline",
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "red",
  // space map
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "w"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "q"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "a"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["K"],
      "after": ["leader", "leader", "k"]
    },
    {
      "before": ["J"],
      "after": ["leader", "leader", "j"]
    },
    {
      "before": ["<leader>", "i"],
      "after": ["y", "i", "\""]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    }
  ],
  // go
  "go.liveErrors": {
    "enabled": true,
    "delay": 500
  },
  "go.lintTool": "golint",
  "go.lintOnSave": "package",
  "go.useLanguageServer": true,
  // files
  "files.associations": {
    "*.toml": "toml"
  },
  "explorer.confirmDelete": false,
  // python
  // TODO: update to p3 and nix?
  "python.pythonPath": "/run/current-system/sw/bin/python",
  // TODO: maybe there is better?
  "python.formatting.provider": "autopep8",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": false,
  // latex
  "latex-workshop.message.update.show": false,
  // TODO: maybe not need?
  // typescript
  "typescript.check.npmIsInstalled": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  // javascript
  "javascript.updateImportsOnFileMove.enabled": "never",
  // git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.ignoreLimitWarning": true,
  "git.enableSmartCommit": true,
  "git.ignoreMissingGitWarning": true,
  // gitlens
  "gitlens.codeLens.enabled": false,
  "gitlens.settings.mode": "advanced",
  "gitlens.keymap": "chorded",
  "gitlens.codeLens.scopes": ["containers", "document"],
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.advanced.messages": {
    "suppressFileNotUnderSourceControlWarning": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true
  },
  // extensions
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true
}
